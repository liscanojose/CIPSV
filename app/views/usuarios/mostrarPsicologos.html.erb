<%= render "partials/head_dashboard" %>

   <div class="col-lg-11">
    <h1 class="page-header">
      <%= @accionUsuario %> <small>Mostrar <%= @accionUsuario%>s</small>
    </h1>
  </div>

  <div class="row col-sm-offset-1 col-md-5 col-lg-12" style="text-align:center;">
    <table class="show">
      <tr class="table-title">
        <td>Nombre</td>
        <td>Apellido</td>
        <td>Correo</td>
        <td></td>
        <td></td>
      </tr>
     
    <%  @usuario.each do | usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.apellido %></td>
        <td><%= usuario.correo %></td>
        <td><%= link_to 'Mostrar', usuario_path(usuario)  %></td>
        
        <% #if current_usuario.rol== 0 %>
          
            <td><%= link_to 'Eliminar', usuario, method: :delete,
            
                                      data: { confirm: "Â¿Estas Seguro?" } 
                                      %></td>
         
        <%#end%>

      </tr>
    <% end %>
    </table>
</div>
        
<%= render "partials/bottom_dashboard" %>