    <body class="login-window">
        <!-- Mensaje -->
            <div class="row">
                <% flash.each do |name, msg| -%>
                      <%= content_tag :div, msg, class: name%>
                <% end -%>
            </div>
        <!-- Mensaje -->

    <div class="container-alone">
    
        <div class="row col-lg-12">
            <div class="col-sm-offset-4 col-md-4 login loginmodal-container">
                <div style="padding:0px; margin:0px; display:none">
                    <% flash.each do |name, msg| -%>
                        <%= content_tag :div, msg, class: name %>
                    <% end -%>
                </div>
                                        
                <h1 style="color:#000;">Iniciar sesión</h1><br>
                       
                <%= form_tag  '/login' , :autocomplete => :off  do %>
                    <div class="form-group">
                        <label class="sr-only" for="form-username">Correo</label>
                        <input class="form-control" id="email" name="correo" type="email" placeholder="Correo..." >
                    </div>
                    
                    <div class="form-group">
                        <label class="sr-only" for="form-password">Contraseña</label>
                        <input class="form-control" id="password" name="password" placeholder="Clave..." type="password">
                    </div>
                    <div>
                        <input type="submit" name="login" class="login loginmodal-submit" value="Entrar">
                    </div>
                <% end %>
                          
                            
                          <div class="login-help">
                           
                                             <br>
                                                <%= link_to "(Olvidaste tu clave?)", '/resetPassword' %>
                          </div>
                     

            </div>
        </div>

    </div>